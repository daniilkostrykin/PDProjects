{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },

    "types": ["vite/client"]   // важно для import.meta.env
  },
  "include": ["src", "vite.config.ts"]
}
